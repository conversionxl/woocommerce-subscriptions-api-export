<?xml version="1.0"?>
<ruleset>

    <file>src</file>
    <file>plugin.php</file>

    <exclude-pattern>src/Core/Application.php</exclude-pattern>
    <exclude-pattern>src/Proxies/App.php</exclude-pattern>
    <exclude-pattern>src/Proxies/Proxy.php</exclude-pattern>
    <exclude-pattern>src/Tools/ServiceProvider.php</exclude-pattern>

    <rule ref="CXL">
        <exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
        <exclude name="WordPress.NamingConventions.ValidFunctionName"/>
        <exclude name="WordPress.NamingConventions.ValidHookName"/>
    </rule>

    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
    <rule ref="PSR1.Methods.CamelCapsMethodName"/>

</ruleset>
